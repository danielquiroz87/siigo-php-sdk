{
    "name": "phpackage/siigo-php-sdk",
    "description": "Siigo PHP SDK",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Manuel Mendoza",
            "email": "alejobit@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^7.1",
        "ext-json": "*",
        "rmccue/requests": "^1.7"
    },
    "autoload": {
        "psr-4": {
            "Phpackage\\Siigo\\": "src/"
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12.14",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "scripts": {
        "phpcs": "phpcs --standard=PSR12 src",
        "phpstan": "phpstan analyse -l 8 src"
    }
}
